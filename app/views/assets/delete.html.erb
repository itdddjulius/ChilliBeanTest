<div class="fancybox-titlebar">
  Delete
</div>
<div class="fancybox-content">
  <i class="fa fa-warning"></i>
  <hr class="marg-top-10 marg-bottom-10">
  Delete the selected Assets from the Library?
  <hr class="marg-top-10 marg-bottom-0">
</div>
<div class="fancybox-content delete-assets">
  <%= form_tag delete_library_assets_path(current_library), method: :delete, id: "delete-assets-form" do %>
    <%= hidden_field_tag "asset_ids[]", nil %>
    <button type="submit" class="red button">Delete</button>
    <a href="javascript:parent.$.fancybox.close();" class="cancel-link">Cancel</a>
  <% end %>
</div>